{
  "name": "settleflow",
  "version": "1.0.0",
  "private": true,
  "description": "Trip Settlement Application for Moving Company",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:api dev:admin",
    "dev:api": "npm run dev -w apps/api",
    "dev:admin": "npm run dev -w apps/admin-ui",
    "prebuild": "npm run build --workspace=packages/shared-types --workspace=packages/shared-config --workspace=packages/shared-validation",
    "build": "npm run build -ws --if-present",
    "postbuild": "npm run build --workspace=apps/api --workspace=apps/admin-ui",
    "start:api": "npm run start -w apps/api",
    "start:admin": "npm run start -w apps/admin-ui",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --project unit",
    "test:integration": "vitest run --project integration",
    "test:e2e": "vitest run --project e2e",
    "prisma:migrate": "npm run prisma:migrate -w apps/api",
    "prisma:generate": "npm run prisma:generate -w apps/api",
    "prisma:studio": "npm run prisma:studio -w apps/api"
  },
  "devDependencies": {
    "@types/node": "^20.19.28",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "pdf-poppler": "^0.2.3"
  }
}
