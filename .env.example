NODE_ENV=development
PORT_API=3000
PORT_ADMIN=3001
DATABASE_URL=file:./dev.db
DATABASE_PROVIDER=sqlite
SENTRY_DSN=
LOG_LEVEL=info
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000
CORS_ORIGIN=http://localhost:3001

# OCR Configuration
OCR_ENABLED=true
OCR_PROVIDER=gemini # Options: 'ollama' or 'gemini'
OCR_TIMEOUT_MS=120000

# Gemini OCR (when OCR_PROVIDER=gemini)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash

# Ollama OCR (when OCR_PROVIDER=ollama)
OCR_SERVER_URL=http://localhost:11434/api/generate
OCR_MODEL=gemma3:27b

# PDF Storage
PDF_STORAGE_PATH=./uploads/pdfs
